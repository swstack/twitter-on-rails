<%= render :template => 'welcome/nav.html.erb' %>
<%= javascript_include_tag params[:controller] %>
<%= stylesheet_link_tag params[:controller] %>

<div id="loading-overlay">

</div>

<div class="container-fluid">
  <h1 class="page-header">
    Mutual Followers
  </h1>

  <div class="row" style="text-align: center;">
    <button class="btn btn-lg btn-default" id="btn-find">
      Find
    </button>
  </div>
  <div class="row">
    <div class="col-md-2 col-md-offset-2">
      <h3 class="page-header">
        <%= @user_screen_name %>
      </h3>

      <div id="user-followers-body">

      </div>

    </div>
    <div class="col-md-2 col-md-offset-1">
      <h3 class="page-header">
        Intersection
      </h3>

      <div id="mutual-followers-body">

      </div>
    </div>
    <div class="col-md-3 col-md-offset-1">
      <h3 class="page-header">
        <input type="text" class="input-sm" id="input-screenname" style="height: 25px;">
        <i class="tooltip fa fa-question fa-lg" title="Enter Twitter Screen-name" style="opacity: 1;"></i>
      </h3>

      <div id="target-followers-body">

      </div>
    </div>

  </div>
</div>

<script id="dyn-followers" type="text/x-handlebars-template">

  {{#each followers}}
  <div class="row">
    <a href="{{this.profile_url}}">{{this.screen_name}}</a>
  </div>
  {{/each}}

</script>
